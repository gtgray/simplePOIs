<resources>

    <style name="Theme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/clr_accent</item>
    </style>

    <style name="Style.Toolbar" parent="Theme.NoActionBar">
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="navigationIcon">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
    </style>

    <style name="Style.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/clr_black</item>
    </style>

</resources>
